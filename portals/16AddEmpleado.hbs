<div class="container ">
                <h3 class="my-4">Agregar Empleado</h3>
              
                <form action="/addEmpleado" method="post">
                <div class="bd-example  mt-5 m-5 pe-5">
                  <div class="input-group mb-3">
                      <span class="input-group-text" id="basic-addon1">Codigo</span>
                      <input type="text" name="id" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                      <span class="input-group-text" id="basic-addon1">Nombres</span>
                      <input type="text" name="nombres" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">Cedula V-</span>
                      <input type="text" name="cedula" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>
                    
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">Direccion</span>
                      <input type="text" name="direccion" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon2">Telefono-</span>
                      <input type="text" name="telefono" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    </div>

                    <div class="input-group mb-3">
                      <span class="input-group-text" id="basic-addon3">Fecha Nacimiento</span>
                      <input type="date" name="fecha_nac" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon3">Fecha Ingreso</span>
                        <input type="date" name="fecha_inicio" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                      </div>

                    <label for="">Datos del Cargo</label>
                    <div class="input-group mb-3">
                      <span class="input-group-text">Salario Base Bs.</span>
                      <input type="text" name="salario" class="form-control" aria-label="Amount (to the nearest dollar)">
                      <span class="input-group-text">.00</span>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Nombre del Cargo</span>
                        <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                      </div>
                      <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Departamento</span>
                        <input type="text" name="departamento" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                      </div>
                    <div class="input-group mt-3">
                        <button class="btn btn-success">Enviar</button>    
                    </div>
                      
                    </div>
                    </form>
            </div>