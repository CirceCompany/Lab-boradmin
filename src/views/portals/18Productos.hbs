<div class="container mt-5">
                
    <table class="table table-striped mt-3">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombres</th>
          <th scope="col">Descripcion</th>
          <th>Precio</th>
          
          <th scope="col"> <a href="/addProductos" ><button class="btn btn-success">Agregar Producto</button></a></th>
        </tr>
        </thead>
        <tbody>
        {{#each productos}}
          <tr id="{{id}}">
            <td>{{id}}</td>
            <td>{{nombre}}</td>
            <td>{{descripcion}}</td>
            <td>{{precio}}</td>
            <td><button class="btn btn-sm btn-success"><a href="/editarProducto/{{id}}">Editar</a></button> 
            <buttton class="btn btn-sm btn-outline-success"  id="detalles-{{id}}"  data-bs-toggle="modal" data-bs-target="#detalle-{{id}}">Detalles</buttton> 
            <button class="btn btn-sm btn-danger" id="del-{{id}}"><a href="/delProducto/{{id}}">X</a></button></td>
          </tr>
        {{/each}}
        </tbody>
      </table>
</div>
{{#each productos}}

    <div class="modal fade" id="detalle-{{id}}" tabindex="-1" aria-labelledby="exampleModalCenteredScrollableTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenteredScrollableTitle">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            {{detalles}}
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="button" class="btn btn-primary"><a href="/addDetalle/{{id}}">AÃ±adir</a></button>
          </div>
        </div>
      </div>
    </div>
    {{/each}}